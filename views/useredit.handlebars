<h1>Editando: {{user.name}}</h1>
<form action="/users/update" method="post" class="form">
  <input type="hidden" name="id" value="{{user.id}}" />
  <div class="form-control">
    <label for="name">Name:</label>
    <input
      type="text"
      name="name"
      placeholder="Digite o nome de usuário"
      value="{{user.name}}"
    />
  </div>
  <div class="form-control">
    <label for="occupation">Profissão:</label>
    <input
      type="text"
      name="occupation"
      placeholder="Digite sua profissão"
      value="{{user.occupation}}"
    />
  </div>
  <div class="form-control form-checkbox">
    {{#if user.newletter}}
      <input type="checkbox" name="newletter" checked />
    {{else}}
      <input type="checkbox" name="newletter" />
    {{/if}}
    <label for="newletter">Enviar promoções?</label>
  </div>
  <input type="submit" value="Editar" />
</form>
<div class="address-container">
  <h2>Endereços:</h2>
  <form action="/address/create" method="post" class="address-form">
    <input type="hidden" name="UserId" value="{{user.id}}" />
    <div class="form-control">
      <label for="street">Rua:</label>
      <input type="text" name="street" placeholder="Digite a rua" />
    </div>
    <div class="form-control">
      <label for="number">Número:</label>
      <input type="text" name="number" placeholder="Digite o número" />
    </div>
    <div class="form-control">
      <label for="city">Cidade:</label>
      <input type="text" name="city" placeholder="Digite a cidade" />
    </div>
    <div class="form-control">
      <input type="submit" value="Incluir endereço" />
    </div>
  </form>
  <div class="address-list">
    <h2>Lista de Endereços:</h2>
    {{#each user.Addresses}}
      <div>
        <p>
          #{{this.id}}
          -
          {{this.street}}
          -
          {{this.number}}
          -
          {{this.city}}
        </p>
        <form action="/address/delete" method="post">
          <input type="hidden" name="UserId" value="{{this.UserId}}" />
          <input type="hidden" name="id" value="{{this.id}}" />
          <input type="submit" value="Excluir" />
        </form>
      </div>
    {{/each}}
  </div>
</div>